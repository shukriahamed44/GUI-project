<Window x:Class="Airborne.AddModUserAC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airborne"
        mc:Ignorable="d"
        Title="AddModUserAC" Height="450" Width="800">
    <Grid>
        
            <!-- Define Row and Column Structure -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- Title -->
                <RowDefinition Height="*" />
                <!-- Field 1 -->
                <RowDefinition Height="*" />
                <!-- Field 2 -->
                <RowDefinition Height="*" />
                <!-- Field 3 -->
                <RowDefinition Height="*" />
                <!-- Field 4 -->
                <RowDefinition Height="*" />
                <!-- Field 5 -->
                <RowDefinition Height="*" />
                <!-- Field 6 -->
                
                <!-- Field 8 -->
               
                <!-- Field 9 -->
                
                <!-- Field 10 -->
                
                <!-- Field 11 -->
                <RowDefinition Height="2*" />
                <!-- Buttons -->

                <!-- Bottom Space -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <!-- Labels -->
                <ColumnDefinition />
                <!-- TextBoxes -->
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock 
        Grid.Row="0" Grid.ColumnSpan="2"
        FontFamily="Helvetica" FontSize="22" FontWeight="Bold"
        Foreground="#4d4d4d"
        HorizontalAlignment="Center" Padding="0" 
        Text="Add/Modify Booking" Margin="0,0,0,0" />

            <!-- Labels -->
            <TextBlock Grid.Row="1" Text="User ID" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="304,0,0,0" />
            <TextBlock Grid.Row="2" Text="User Name" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="305,0,0,0" />
            <TextBlock Grid.Row="3" Text="Email" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="304,0,0,0" />
            <TextBlock Grid.Row="4" Text="username" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="305,0,0,0" />
            <TextBlock Grid.Row="5" Text="password" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="304,0,0,0" />
            <TextBlock Grid.Row="6" Text="account type" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="305,0,0,0" />
            
            <!-- TextBoxes -->
            <TextBox Grid.Row="1" Grid.Column="1" Margin="10,10,120,10" x:Name="UserID_button" />
            <TextBox Grid.Row="2" Grid.Column="1" Margin="10,10,120,10" x:Name="Name_button" />
            <TextBox Grid.Row="3" Grid.Column="1" Margin="10,10,120,10" x:Name="Email_button" />
            <TextBox Grid.Row="4" Grid.Column="1" Margin="10,10,120,10" x:Name="username_button" />
            <TextBox Grid.Row="5" Grid.Column="1" Margin="10,10,120,10" x:Name="password_button" />
            <TextBox Grid.Row="6" Grid.Column="1" Margin="10,10,120,10" x:Name="account_button" />
           
           
            


            <!-- Buttons -->
            <Button Grid.Row="12" Margin="240,30,0,30" Background="#4c739e" Foreground="White" FontFamily="Helvetica" FontSize="16"
            HorizontalAlignment="Left" Width="150" Content="Add User" Click="AddUser_button" />
            <Button Grid.Row="12" Grid.Column="1" Margin="10,30,0,30" Background="#4c739e" Foreground="White" FontFamily="Helvetica" FontSize="16"
            HorizontalAlignment="Left" Width="150" Content="Discard Changes" Click="Discard_button" />

        </Grid>
</Window>

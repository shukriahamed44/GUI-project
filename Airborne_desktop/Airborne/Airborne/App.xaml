<Application x:Class="Airborne.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Airborne"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Defining the FontFamily resource -->
        <FontFamily x:Key="CreatoDisplay">pack://application:,,,/Airborne;component/Fonts/#CreatoDisplay</FontFamily>

        <!-- Global Style for TextBlock using the defined FontFamily -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource CreatoDisplay}" />
        </Style>
    </Application.Resources>
</Application>

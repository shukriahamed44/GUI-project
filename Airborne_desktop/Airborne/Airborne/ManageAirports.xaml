<Page x:Class="Airborne.ManageAirports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airborne"
      mc:Ignorable="d" 
      Background="white"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageAirports">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border  Grid.Column ="0" Grid.Row="0" Grid.ColumnSpan="2" BorderThickness="0">
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/imagesdesktopapp/airport_management.png" Stretch ="UniformToFill"/>
            </Border.Background>
        </Border>

        <TextBlock Grid.Row="0" Grid.Column="1"
                   FontFamily="helvetica"
                   Foreground="white"
                   FontSize="70"
                   FontWeight="Bold"
                   HorizontalAlignment="Right"
                   Padding="0,20,40,0"
                   >Airports</TextBlock>

        <Grid Grid.RowSpan="9"
              Grid.Row="1"
              Grid.Column="0"
              Background="#4d4d4d"
              />

        <Button Grid.Column="0"
                Grid.Row="2"
                Background="white"
                Foreground="#4d4d4d"
                Margin="40 0 40 0"
                Content="Add Airport"
                FontFamily="helvetica"
                FontSize="20" Click="AddAirport_button"
                />

        <Button Grid.Column="0"
            Grid.Row="4"
            Background="white"
                Foreground="#4d4d4d"
                FontFamily="helvetica"
                FontSize="20"
            Margin="40 0 40 0"
                Content="Remove Airport" Click="DeleteAirport_button"
            />

        <Button Grid.Column="0"
            Grid.Row="6"
            Background="#757575"
            Foreground="white"
            FontFamily = "helvetica"
            FontSize="20"
            Margin="40 0 40 0"
            Content="Back" Click="MngAirportBack_button"
            />

        <Rectangle Grid.Column="0"
                   Grid.Row="8"
                   Fill="white"
                   Height="1"
                   Opacity="0.5"/>

        <Grid Grid.Row="9" Grid.Column="0">
            <Border>
                <Image Source="imagesdesktopapp/main_logo_white.png"
               Height="35"
               HorizontalAlignment="Left"
               Margin="40 5 5 5 "
               
               />
            </Border>
        </Grid>

        <TextBlock Grid.Row="2" Grid.Column="1"
                   FontFamily="helvetica"
                   Foreground="#4d4d4d"
                   FontSize="20"
                   FontWeight="medium"
                   HorizontalAlignment="left"
                   Margin="20 0 0 0"
                   
                   >Available airports list</TextBlock>

        <DataGrid Grid.Row="3" Grid.RowSpan="7" Grid.Column="1"
              
              x:Name="AirportsGrid"
              AutoGenerateColumns="True"
              Margin="20 0 20 40"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              SelectionChanged="AirportsGrid_SelectionChanged">

        </DataGrid>





    </Grid>
</Page>

<Window x:Class="Airborne.AddorModifyBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AddorModifyBooking" Height="450" Width="800">
    <Grid>
        <!-- Define Row and Column Structure -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Title -->
            <RowDefinition Height="*" />
            <!-- Field 1 -->
            <RowDefinition Height="*" />
            <!-- Field 2 -->
            <RowDefinition Height="*" />
            <!-- Field 3 -->
            <RowDefinition Height="*" />
            <!-- Field 4 -->
            <RowDefinition Height="*" />
            <!-- Field 5 -->
            <RowDefinition Height="*" />
            <!-- Field 6 -->
            <RowDefinition Height="*" />
            <!-- Field 7 -->
            <RowDefinition Height="*" />
            <!-- Field 8 -->
            <RowDefinition Height="*" />
            <!-- Field 9 -->
            <RowDefinition Height="*" />
            <!-- Field 10 -->
            <RowDefinition Height="*" />
            <!-- Field 11 -->
            <RowDefinition Height="2*" />
            <!-- Buttons -->

            <!-- Bottom Space -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <!-- Labels -->
            <ColumnDefinition />
            <!-- TextBoxes -->
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock 
            Grid.Row="0" Grid.ColumnSpan="2"
            FontFamily="Helvetica" FontSize="22" FontWeight="Bold"
            Foreground="#4d4d4d"
            HorizontalAlignment="Center" Padding="0" 
            Text="Add/Modify Booking" Margin="0,0,0,0" />

        <!-- Labels -->
        <TextBlock Grid.Row="1" Text="NIC Number" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="304,0,0,0" />
        <TextBlock Grid.Row="2" Text="Name" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="338,0,0,0" />
        <TextBlock Grid.Row="3" Text="Contact Number" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="282,0,0,0" />
        <TextBlock Grid.Row="4" Text="Email" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="342,0,0,0" />
        <TextBlock Grid.Row="5" Text="Departure Airport" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="276,0,0,0" />
        <TextBlock Grid.Row="6" Text="Arrival Airport" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="296,0,0,0" />
        <TextBlock Grid.Row="7" Text="Number of Passengers" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="251,0,0,0" />
        <TextBlock Grid.Row="8" Text="Date of Departure" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="274,0,0,0" />
        <TextBlock Grid.Row="9" Text="Time of Departure" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="274,0,0,0" />
        <TextBlock Grid.Row="10" Text="Flight Number" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="294,0,0,0" />
        <TextBlock Grid.Row="11" Text="Total Price (LKR)" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="286,0,0,0" />

        <!-- TextBoxes -->
        <TextBox Grid.Row="1" Grid.Column="1" Margin="10,10,120,10" x:Name="NicNumber_button" />
        <TextBox Grid.Row="2" Grid.Column="1" Margin="10,10,120,10" x:Name="Name_button" />
        <TextBox Grid.Row="3" Grid.Column="1" Margin="10,10,120,10" x:Name="ContactNumber_button" />
        <TextBox Grid.Row="4" Grid.Column="1" Margin="10,10,120,10" x:Name="Email_button" />
        <TextBox Grid.Row="5" Grid.Column="1" Margin="10,10,120,10" x:Name="DepartureAirport_button" />
        <TextBox Grid.Row="6" Grid.Column="1" Margin="10,10,120,10" x:Name="ArrivalAirport_button" />
        <TextBox Grid.Row="7" Grid.Column="1" Margin="10,10,120,10" x:Name="NumberOfPassengers_button" />
        <TextBox Grid.Row="8" Grid.Column="1" Margin="10,10,120,10" x:Name="DateOfDeparture_button" />
        <TextBox Grid.Row="9" Grid.Column="1" Margin="10,10,120,10" x:Name="TimeOfDeparture_button" />
        <TextBox Grid.Row="10" Grid.Column="1" Margin="10,10,120,10" x:Name="FlightNumber_button" />
        <TextBox Grid.Row="11" Grid.Column="1" Margin="10,10,120,10" x:Name="TotalPrice_button" />


        <!-- Buttons -->
        <Button Grid.Row="12" Margin="240,10,0,10" Background="#4c739e" Foreground="White" FontFamily="Helvetica" FontSize="16"
                HorizontalAlignment="Left" Width="150" Content="Add Booking" Click="AddBooking_button" />
        <Button Grid.Row="12" Grid.Column="1" Margin="10,10,0,10" Background="#4c739e" Foreground="White" FontFamily="Helvetica" FontSize="16"
                HorizontalAlignment="Left" Width="150" Content="Discard Changes" Click="Discard" />

    </Grid>
</Window>

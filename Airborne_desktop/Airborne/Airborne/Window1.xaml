<Window x:Class="Airborne.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airborne"
        mc:Ignorable="d"
        Title="Window1" Height="1000" Width="800">
    <Grid>
        <!-- Define Rows and Columns with added spacing -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- Extra space for top margin -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <!-- Space between rows -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <!-- Space between rows -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <!-- Space between rows -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <!-- Space between rows -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <!-- Extra space for bottom margin -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Design and Analysis -->
        <Rectangle Grid.Row="1" Grid.Column="1" Width="200" Height="50" Fill="LightBlue" Stroke="Black" Margin="0,10"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Design and Analysis" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>

        <!-- Arrow -->
        <Line Grid.Row="2" Grid.Column="1" X1="200" Y1="50" X2="200" Y2="0" Stroke="Black" StrokeThickness="2" VerticalAlignment="Bottom"/>
        <Polygon Grid.Row="3" Grid.Column="1" Points="195,0 205,0 200,10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <!-- Material Preparation -->
        <Rectangle Grid.Row="3" Grid.Column="1" Width="250" Height="50" Fill="LightGreen" Stroke="Black" Margin="0,10"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="Material Preparation:\nCutting, Cleaning" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextAlignment="Center"/>

        <!-- Arrow -->
        <Line Grid.Row="4" Grid.Column="1" X1="200" Y1="50" X2="200" Y2="0" Stroke="Black" StrokeThickness="2" VerticalAlignment="Bottom"/>
        <Polygon Grid.Row="5" Grid.Column="1" Points="195,0 205,0 200,10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <!-- Assembly and Alignment -->
        <Rectangle Grid.Row="5" Grid.Column="1" Width="250" Height="50" Fill="LightPink" Stroke="Black" Margin="0,10"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Text="Assembly and Alignment" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextAlignment="Center"/>

        <!-- Arrow -->
        <Line Grid.Row="6" Grid.Column="1" X1="200" Y1="50" X2="200" Y2="0" Stroke="Black" StrokeThickness="2" VerticalAlignment="Bottom"/>
        <Polygon Grid.Row="7" Grid.Column="1" Points="195,0 205,0 200,10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <!-- Welding Process -->
        <Rectangle Grid.Row="7" Grid.Column="1" Width="300" Height="50" Fill="LightYellow" Stroke="Black" Margin="0,10"/>
        <TextBlock Grid.Row="7" Grid.Column="1" Text="Welding Process:\nSubmerged Arc/Hybrid Welding" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextAlignment="Center"/>

        <!-- Arrow -->
        <Line Grid.Row="8" Grid.Column="1" X1="200" Y1="50" X2="200" Y2="0" Stroke="Black" StrokeThickness="2" VerticalAlignment="Bottom"/>
        <Polygon Grid.Row="9" Grid.Column="1" Points="195,0 205,0 200,10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <!-- Inspection and Quality Control -->
        <Rectangle Grid.Row="9" Grid.Column="1" Width="300" Height="50" Fill="LightCoral" Stroke="Black" Margin="0,10"/>
        <TextBlock Grid.Row="9" Grid.Column="1" Text="Inspection and Quality Control:\nNDT Methods" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextAlignment="Center"/>

        <!-- Arrow -->
        <Line Grid.Row="10" Grid.Column="1" X1="200" Y1="50" X2="200" Y2="0" Stroke="Black" StrokeThickness="2" VerticalAlignment="Bottom"/>
        <Polygon Grid.Row="11" Grid.Column="1" Points="195,0 205,0 200,10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <!-- Post-Welding Treatment -->
        <Rectangle Grid.Row="11" Grid.Column="1" Width="300" Height="50" Fill="LightCyan" Stroke="Black" Margin="0,10"/>
        <TextBlock Grid.Row="11" Grid.Column="1" Text="Post-Welding Treatment:\nStress Relief, Coating" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextAlignment="Center"/>

        <!-- Arrow -->
        <Line Grid.Row="12" Grid.Column="1" X1="200" Y1="50" X2="200" Y2="0" Stroke="Black" StrokeThickness="2" VerticalAlignment="Bottom"/>
        <Polygon Grid.Row="13" Grid.Column="1" Points="195,0 205,0 200,10" Fill="Black" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <!-- Final Product Delivery -->
        <Rectangle Grid.Row="10" Grid.Column="1" Width="200" Height="50" Fill="LightGray" Stroke="Black" Margin="94,128,106,-78"/>
        <TextBlock Grid.Row="10" Grid.Column="1" Text="Final Product Delivery" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="14" Margin="127,145,0,0"/>
    </Grid>
</Window>

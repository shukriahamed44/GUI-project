<Window x:Class="Airborne.AddAircraft"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airborne"
        mc:Ignorable="d"
        Title="AddAircraft" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height=" 2*"/>
            <RowDefinition Height=" 2*"/>
            <RowDefinition Height=" *"/>
            <RowDefinition Height=" *"/>
            <RowDefinition Height=" 0.5* "/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              FontFamily="Helvetica"
              FontSize="35"
              HorizontalAlignment="Center"
              FontWeight="Bold" 
              Padding="25"
              Text="Add/ Modify Aircrafts"/>

        <StackPanel Grid.Row="1"
               Grid.Column="0"
               Grid.RowSpan="3"
               >

            <TextBlock  FontFamily="Helvetica"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   Padding="50 10 30 10"
                   Margin="70 10"
                   
                   Text="Aircraft ID"/>

            <TextBlock  FontFamily="Helvetica"
                   HorizontalAlignment="Left"
                   Padding="50 10 30 10"
                   Margin="70 10"
                   FontSize="25"
                   
                   Text="Aircraft"/>
            
            <TextBlock  FontFamily="Helvetica"
                   HorizontalAlignment="Left"
                   Padding="50 10 30 10"
                   Margin="70 10"
                   FontSize="25"
                   
                   Text="Location"/>


        </StackPanel>

        <StackPanel Grid.Row="1"
               Grid.Column="1"
               Grid.RowSpan="3">

            <TextBox Margin="20 20 60 0 "
                Padding="10"
                x:Name="AircraftIDTextbox"
                />
            <TextBox
                Padding="10"
                Margin="20 27 60 0"
                x:Name="AircraftTextbox"
                />
            
            <TextBox
                Padding="10"
                Margin="20 27 60 0"
                x:Name="LocationTextbox"
                />


        </StackPanel>

        <Button
       Grid.Row="4"
       Background="#4c739e"
       Foreground="white"
       FontFamily="Helvetica"
       FontSize="20"
       Padding="10"
       Margin="55 5 55 5"
       Click="Save_Aircraft"
       
       
       >Add Aircraft
        </Button>

        <Button
Grid.Row="4"
Grid.Column="1"
Background="#4c739e"
Foreground="white"
FontFamily="Helvetica"
FontSize="20"
Padding="10"
Margin="35 5 55 5"
            Click="Discard_button"

>Discard Changes
        </Button>
    </Grid>
</Window>
